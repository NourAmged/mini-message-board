<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/style.css" />
    <title>Mini Message board</title>
  </head>
  <body>
    <nav>
      <p>MMB Wall</p>
      <p>Total Messages <%= messagesNum %></p>
      <a href="/new">
        <button class="new-message-btn">New Message</button>
      </a>
    </nav>
    <main>
      <% messages.forEach((message, idx) => { %>
      <div class="message">
        <%= message.user %>
        <a href="/message/<%= idx %>">
          <button class="open-message-btn">Open</button>
        </a>
      </div>
      <% }); %>
    </main>
  </body>
</html>
